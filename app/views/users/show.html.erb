<h3>スケジュール詳細</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>投稿日時</th>
        <td><%= @user.age %></td>
      </tr>
        <tr>
        <th>終日</th>
        <td><%= @user.age %></td>
      </tr>
      <tr>
        <th>スケジュールメモ</th>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
 
    <div>
      <ul>
         <li><%= link_to "スケジュール一覧に戻る" ,:users %></li>
         <li><%= link_to "スケジュールを編集する" ,[:edit, @user] %></li>
         <li><%= link_to "スケジュールを削除", @user, method: :delete, data: {confirm: "本当に削除しますか？"} %></li>
      </ul>
    </div>